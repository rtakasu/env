function root {
  WORKSPACE="$HOME/workspace/"
  PROJECT=$(echo ${PWD#"$WORKSPACE"} | cut -d '/' -f1)
  cd $WORKSPACE/$PROJECT
}

# Silver Searcher ag alias
alias ag="alias ag='ag --path-to-ignore ~/.ignore'"

# Git aliases
alias ts="tig status"
alias g="git"

function f {
  find . -name "*$1*"
}

alias disk="du -hs * | sort -h"

alias ws="cd ~/workspace"

alias soccer="cd ~/workspace/semantics-soccer"
alias vim="nvim"

alias env="cd ~/workspace/env_setup"

alias c="clear"
alias cpdir="pwd | pbcopy"
alias sl="ls"
alias reload="source ~/.zshrc"

function dl {
  mkdir --parents ~/.Trash/$1
  mv "$1" ~/.Trash
}

function copycat {
  cat $1 | pbcopy
}

